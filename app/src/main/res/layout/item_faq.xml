<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/faq_item"
    android:layout_marginBottom="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="10">

        <ImageView
            android:id="@+id/image_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_arrow_bottom"
            android:layout_weight="0.5"
            app:tint="#D9D9D9" />

        <TextView
            android:id="@+id/faq_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9.5"
            android:text="Why we created Notify."
            android:fontFamily="@font/tektur_medium"
            android:textSize="20dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/textFaq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:fontFamily="@font/tektur"
        android:text="We create notify as our youtube channel project, if you from our youtube channel, subscribe my channel like this video and comment a single word. "
        />
</LinearLayout>